---

<Layout {...seoData}>
	<Navbar />
	<Hero />
	
	<!-- About Preview Section -->
	<section id="about" class="py-20 bg-slate-50 dark:bg-slate-800/50 section-reveal">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
