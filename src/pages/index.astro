---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PortfolioCard from '../components/PortfolioCard.astro';

const seoData = {
	title: "Evergreene Software Inc. - World-Class Software for Less",
	description: "We build world-class software for less. Helping startups and businesses bring their ideas to life with affordable, global-standard development.",
	keywords: "software development, web development, mobile apps, fintech, SaaS, affordable software, React, Node.js, Python, Evergreene Software, Phinmon, startup development",
	canonical: "/",
	ogType: "website"
