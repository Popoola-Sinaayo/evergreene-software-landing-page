---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PortfolioCard from '../components/PortfolioCard.astro';

const seoData = {
	title: "Digital Transformation Services - Solve Business Pain Points | Evergreene Software",
	description: "Transform your business with custom software solutions tailored to your needs that solve pain points and drive growth. Digital transformation services for modern businesses.",
	keywords: "digital transformation, business pain points, custom software solutions, process automation, system integration, SaaS platforms, business optimization, tailored software, Evergreene Software",
	canonical: "/",
	ogType: "website"
};
---

<Layout {...seoData}>
	<Navbar />
	<Hero />
	
	<!-- About Preview Section -->
	<section id="about" class="py-20 bg-slate-50 dark:bg-slate-800/50 section-reveal">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16" data-animate>
				<h2 class="text-4xl sm:text-5xl font-bold text-slate-800 dark:text-white mb-6 font-heading">
					Solving Business <span class="text-emerald-600 dark:text-emerald-400">Pain Points</span> Through Technology
				</h2>
				<div class="w-24 h-1 bg-gradient-to-r from-emerald-500 to-emerald-600 mx-auto rounded-full"></div>
			</div>
			
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div data-animate>
					<h3 class="text-3xl font-bold text-slate-800 dark:text-white mb-6 font-heading">Your Digital Transformation Partner</h3>
					<p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed mb-6 font-light">
						We identify and solve the specific pain points that hold your business back. From inefficient processes to outdated systems, 
						we create custom software solutions tailored to your unique business needs that streamline operations and drive growth.
					</p>
					<p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed mb-8 font-light">
						Our proven track record includes <strong class="text-emerald-600 dark:text-emerald-400">Phinmon</strong>, a fintech platform 
						that transformed financial management for young people, demonstrating our ability to solve complex business challenges.
					</p>
					
					<div class="flex flex-col sm:flex-row gap-4">
						<a href="/about" class="bg-gradient-to-r from-emerald-500 to-emerald-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-emerald-600 hover:to-emerald-700 transition-all duration-300 transform hover:scale-105 text-center">
							Learn More About Us
						</a>
						<a href="/portfolio" class="border border-emerald-500 text-emerald-600 dark:text-emerald-400 px-6 py-3 rounded-lg font-semibold hover:bg-emerald-500 hover:text-white transition-all duration-300 text-center">
							See Our Work
						</a>
					</div>
				</div>
				
				<div class="relative" data-animate>
					<div class="bg-gradient-to-br from-emerald-500/20 to-emerald-600/20 rounded-2xl p-8 backdrop-blur-sm border border-emerald-500/30">
						<div class="grid grid-cols-2 gap-6">
							<div class="text-center">
								<div class="w-16 h-16 bg-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
									<svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
									</svg>
								</div>
								<h4 class="text-slate-800 dark:text-white font-semibold mb-2">Rapid Problem Solving</h4>
								<p class="text-slate-600 dark:text-slate-300 text-sm">Quick pain point resolution</p>
							</div>
							<div class="text-center">
								<div class="w-16 h-16 bg-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
									<svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
									</svg>
								</div>
								<h4 class="text-slate-800 dark:text-white font-semibold mb-2">Cost-Effective Solutions</h4>
								<p class="text-slate-600 dark:text-slate-300 text-sm">ROI-focused development</p>
							</div>
							<div class="text-center">
								<div class="w-16 h-16 bg-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
									<svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
									</svg>
								</div>
								<h4 class="text-slate-800 dark:text-white font-semibold mb-2">Scalable Solutions</h4>
								<p class="text-slate-600 dark:text-slate-300 text-sm">Grow with your business</p>
							</div>
							<div class="text-center">
								<div class="w-16 h-16 bg-emerald-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
									<svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
									</svg>
								</div>
								<h4 class="text-slate-800 dark:text-white font-semibold mb-2">Strategic Partnership</h4>
								<p class="text-slate-600 dark:text-slate-300 text-sm">Long-term success focus</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Services Overview Section -->
	<section id="services" class="py-20 section-reveal">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16" data-animate>
				<h2 class="text-4xl sm:text-5xl font-bold text-slate-800 dark:text-white mb-6 font-heading">
					Digital <span class="text-emerald-600 dark:text-emerald-400">Transformation</span> Solutions
				</h2>
				<div class="w-24 h-1 bg-gradient-to-r from-emerald-500 to-emerald-600 mx-auto rounded-full mb-8"></div>
				<p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
					We identify pain points and create custom software solutions tailored to your business that transform operations and drive measurable results.
				</p>
			</div>
			
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				<ServiceCard
					title="Web Solutions"
					description="Streamline operations and eliminate inefficiencies with custom web applications that solve your specific business challenges."
					icon="🌐"
					features={[
						"Process automation",
						"Workflow optimization",
						"Data management",
						"User experience enhancement"
					]}
					technologies={["React", "Next.js", "Django", "Node.js"]}
				/>
				
				<ServiceCard
					title="Mobile Solutions"
					description="Enhance customer engagement and accessibility with mobile apps that solve communication and service delivery challenges."
					icon="📱"
					features={[
						"Customer engagement",
						"Service accessibility",
						"Real-time communication",
						"Offline functionality"
					]}
					technologies={["React Native", "Expo", "Flutter", "Swift"]}
				/>
				
				<ServiceCard
					title="System Integration"
					description="Connect disparate systems and eliminate data silos with robust APIs that streamline your business processes."
					icon="⚡"
					features={[
						"System connectivity",
						"Data synchronization",
						"Workflow automation",
						"Legacy system modernization"
					]}
					technologies={["Python", "Node.js", "PostgreSQL", "AWS"]}
				/>
				
				<ServiceCard
					title="Business Platforms"
					description="Transform your business model with scalable SaaS platforms that solve complex operational challenges and drive revenue growth."
					icon="🚀"
					features={[
						"Revenue optimization",
						"Operational efficiency",
						"Customer lifecycle management",
						"Data-driven insights"
					]}
					technologies={["React", "Django", "PostgreSQL", "Docker"]}
				/>
			</div>
		</div>
	</section>

	<!-- Portfolio Highlights Section -->
	<section id="portfolio" class="py-20 bg-slate-50 dark:bg-slate-800/50 section-reveal">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16" data-animate>
				<h2 class="text-4xl sm:text-5xl font-bold text-slate-800 dark:text-white mb-6 font-heading">
					Our <span class="text-emerald-600 dark:text-emerald-400">Product</span>
				</h2>
				<div class="w-24 h-1 bg-gradient-to-r from-emerald-500 to-emerald-600 mx-auto rounded-full mb-8"></div>
				<p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
					See how we've built Phinmon, our fintech startup focused on young people and financial wellness.
				</p>
			</div>
			
			<div class="max-w-4xl mx-auto">
				<PortfolioCard
					title="Phinmon"
					description="A fintech startup focused on young people and financial wellness. Features AI-powered financial insights, expense tracking, and personalized financial advice."
					category="Fintech"
					image="/images/phinmon.jpg"
					technologies={["React Native", "Python", "OpenAI", "PostgreSQL", "AWS"]}
					results={[
						"40% increase in user engagement",
						"90% reduction in manual financial tracking",
						"Real-time financial insights"
					]}
					featured={true}
				/>
			</div>
		</div>
	</section>


	<!-- Final CTA Section -->
	<section id="contact" class="py-20 bg-gradient-to-br from-emerald-500 to-emerald-600 section-reveal">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<div class="max-w-3xl mx-auto" data-animate>
				<h2 class="text-4xl sm:text-5xl font-bold text-white mb-6 font-heading">
					Ready to Transform Your Business?
				</h2>
				<p class="text-xl text-emerald-100 mb-8 leading-relaxed">
					Let's identify your pain points and create custom software solutions tailored to your business that drive real results and growth.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/contact" class="bg-white text-emerald-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-emerald-50 transition-all duration-300 transform hover:scale-105 shadow-lg">
						Start Your Transformation
					</a>
					<a href="mailto:hello@evergreenesoftware.com" class="border border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-emerald-600 transition-all duration-300">
						hello@evergreenesoftware.com
					</a>
				</div>
			</div>
		</div>
	</section>

	<Footer />
</Layout>

<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "Evergreene Software Inc.",
	"url": "https://evergreenesoftware.com",
	"description": "Transform your business with custom software solutions that solve pain points and drive growth. Digital transformation services for modern businesses.",
	"publisher": {
		"@type": "Organization",
		"name": "Evergreene Software Inc.",
		"url": "https://evergreenesoftware.com"
	},
	"potentialAction": {
		"@type": "SearchAction",
		"target": "https://evergreenesoftware.com/search?q={search_term_string}",
		"query-input": "required name=search_term_string"
	}
}
</script>