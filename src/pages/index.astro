<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": "Evergreene Software Inc.",
	"url": "https://evergreenesoftware.com",
	"description": "We build world-class software for less. Helping startups and businesses bring their ideas to life with affordable, global-standard development.",
	"publisher": {
		"@type": "Organization",
		"name": "Evergreene Software Inc.",
		"url": "https://evergreenesoftware.com"
	},
	"potentialAction": {
		"@type": "SearchAction",
		"target": "https://evergreenesoftware.com/search?q={search_term_string}",
		"query-input": "required name=search_term_string"
	}
}
</script>